<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>
<addon id="iptvbrasil.reposity" name="IPTV Brasil Repository" version="1.0.2" provider-name="iptvbrasil">
	<extension point="xbmc.addon.repository" name="Demonstration Add-on Repository">
		<info compressed="false">http://raw.github.com/iptvbrasil/iptvbrasil.reposity/master/addons.xml</info>
		<checksum>http://raw.github.com/iptvbrasil/iptvbrasil.reposity/master/addons.xml.md5</checksum>
		<datadir zip="true">http://raw.github.com/iptvbrasil/iptvbrasil.reposity/master/repo/</datadir>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary>IPTV Brasil Repository</summary>
		<description>Canais do Mundo em um so Lugar.</description>
		<disclaimer></disclaimer>
		<platform>all</platform>
	</extension>
</addon>

<addon id="plugin.video.iptvbrasil" name="IPTV Brasil" version="1.0.2" provider-name="IPTV Brasil by Marco">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="defaut.py">
    <provides>video</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <language>en</language>
    <platform>all</platform>
    <summary lang="en">IPTV Brasil</summary>
    <description lang="en">Canais do Mundo em um so Lugar.</description>
	<platform>all</platform>
  </extension>
</addon>
</addons>
